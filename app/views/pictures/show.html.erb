<div class="row">
      <div class="large-12 columns">

        <div class="margin"></div>
        <h1>Welcome to Photogur (free image-sharing)</h1><hr>
      </div>
    </div>
    
    <div class="row">

      
      <div class="medium-6 columns">


      	<div id="#picture">

         <img class="th" src="http://lorempixel.com/400/300/<%= @picture.picture_url %>" />
	      
      </div><!-- #picture --><br>



      <div class="links">
        <ul class="inline-list">
          <li><%= link_to 'Back', pictures_path, class: 'uk-button uk-button-success' %></li>
          <li><%= link_to 'Edit', edit_picture_path(@picture), class: 'uk-button uk-button-primary t'  %></li>
         <% if current_user %>
          <li><%=button_to ' â™¥ Like ', vote_up_picture_path(@picture), class: 'uk-button like', id: 'vote_btn', :remote => true %></li>        
          <% else %>
           <li>Please <%= link_to "Log In", new_user_session_path %> to like this picture</li>

        <% end %>
          <li><a class="uk-button uk-button-danger" href="">Delete</a></li>
        </ul>
      </div>
    </div>

      <div class="medium-6 columns">

        <h3><%= @picture.title %></h3>
        <p><em>by</em> <%= @picture.artist %></p>
        <p>Added on 2014, Jul 14 </p>
        <p><%= @picture.description %></p>   
        
        <hr>

        <div id="likes" data-likes>

          <h2><%= @picture.votes.size %></h2>

        </div>

        <h3>Reviews</h3>

 
          <a href="" class="button success tiny right round" id="add_review">Add a Review</a>
    
          <div class="clearfix"></div>

        <div id="review" style="display:none">
            <form>
              <div class="row">
                <div class="large-12 columns">
                  <label>Title
                    <input type="text" placeholder="" />
                  </label>
                </div>
              </div>
              <div class="row">
                <div class="large-12 columns">
                  <label>Message
                    <input type="text" placeholder="large-4.columns" />
                  </label>
                </div>
              </div>
              <div class="row">
                <div class="large-12 columns">
                  <input type="submit" value="Add Review" class="uk-button right" />
               </div>
              </div>
             </form>
         </div>

    

        <p>No review yet</p> 
        <% if current_user %>            
          <% else %>
           <li>Please <%= link_to "Log In", new_user_session_path %> to leave a comment</li>
        <% end %>



    
    
    <hr>


      </div>

</div><!--row-->


